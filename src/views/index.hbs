                <img src="/6-20.JPG" alt="{{musician.name}} playing saxophone" class="musician-photo">
            </div>
        </div>
    </div>
</section>

{{!-- Reviews --}}

<section id="reviews" class="reviews">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">What Clients Say</h2>
            <p class="section-subtitle">Testimonials from memorable performances</p>
        </div>
        <div class="reviews-grid">
            {{#each reviews}}
            <div class="review-card">
                <div class="review-header">
                    <div class="review-stars">
                        {{#repeat rating}}★{{/repeat}}
                    </div>
                    <span class="review-date">{{date}}</span>
                </div>
                <p class="review-text">"{{text}}"</p>
                <div class="review-author">
                    <strong>{{name}}</strong>
                    <span class="review-event">{{event}}</span>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

{{!--Add Reviews --}}

<section id="add-review" class="add-review">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Share Your Experience</h2>
            <p class="section-subtitle">Help others discover the magic of live jazz</p>
        </div>

        <div class="add-review-content">

            <!-- Review Form -->
            <div class="review-form-container">
                <form class="review-form booking-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="reviewer-name">Your Name</label>
                            <input type="text" id="reviewer-name" name="name" placeholder="Enter your full name"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="event-type">Event Type</label>
                            <select id="event-type" name="event" required>
                                <option value="">Select event type</option>
                                <option value="Wedding">Wedding</option>
                                <option value="Corporate Event">Corporate Event</option>
                                <option value="Private Party">Private Party</option>
                                <option value="Restaurant/Bar">Restaurant/Bar</option>
                                <option value="Jazz Club">Jazz Club</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <div class="star-rating">
                            <input type="radio" id="star5" name="rating" value="5" required>
                            <label for="star5" class="star">★</label>
                            <input type="radio" id="star4" name="rating" value="4">
                            <label for="star4" class="star">★</label>
                            <input type="radio" id="star3" name="rating" value="3">
                            <label for="star3" class="star">★</label>
                            <input type="radio" id="star2" name="rating" value="2">
                            <label for="star2" class="star">★</label>
                            <input type="radio" id="star1" name="rating" value="1">
                            <label for="star1" class="star">★</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="review-text">Your Review</label>
                        <textarea id="review-text" name="review"
                            placeholder="Share your experience with Marcus's performance..." rows="5"
                            required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="event-date">Event Date (Optional)</label>
                        <input type="date" id="event-date" name="date">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </form>
            </div>

            <!-- Review Info -->
            <div class="review-info">
                <h3 class="review-info-title">Why Your Review Matters</h3>
                <p>
                    Your feedback helps future clients understand the quality and professionalism of Marcus's
                    performances. Every review contributes to building trust and showcasing the memorable experiences
                    created through live jazz music.
                </p>
                <div class="review-guidelines">
                    <h4>Review Guidelines</h4>
                    <ul>
                        <li class="highlight-item">Share specific details about your event</li>
                        <li class="highlight-item">Mention song requests or special moments</li>
                        <li class="highlight-item">Describe the atmosphere Marcus created</li>
                        <li class="highlight-item">Note his professionalism and punctuality</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</section>

