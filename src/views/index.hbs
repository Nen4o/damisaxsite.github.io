<section id="home" class="hero">
    <div class="image-container">
        <img src="/image/hero_img" alt="Hero Background" class="hero-image">
        <div class="image-overlay"></div>
    </div>
    <div class="hero-content">
        <h1 class="hero-title">{{musician.name}}</h1>
        <p class="hero-subtitle">Professional {{musician.genre}} {{musician.instrument}} Player</p>
        <p class="hero-description">{{musician.experience}} of soulful performances across {{musician.location}}</p>
        <div class="hero-buttons">
            <a href="#about" class="btn btn-primary">Discover My Story</a>
            <a href="#pricing" class="btn btn-secondary">View Packages</a>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
    </div>
</section>


