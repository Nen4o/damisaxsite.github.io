<section id="home" class="hero">
    <div class="image-container">
        <img src="/image/hero_img" alt="Hero Background" class="hero-image">
        <div class="image-overlay"></div>
    </div>
    <div class="hero-content">
        <h1 class="hero-title">{{data.musician.name}}</h1>
        <p class="hero-subtitle">{{data.musician.genre}}</p>
        <p class="hero-description">Eлегантен тон за вашето събитие</p>
        <div class="hero-buttons">
            <a href="#about" class="btn btn-primary">Научи повече за мен</a>
            <a href="#pricing" class="btn btn-secondary">Ценораспис</a>
        </div>
    </div>
    {{!-- <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
    </div> --}}
</section>


{{!-- About --}}
<section id="about" class="about">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">За мен</h2>
            <p class="section-subtitle">Историята на един саксофонист</p>
        </div>
        <div class="about-content">
            <div class="about-text">
                <p class="about-description">{{data.about.description}}</p>
                {{!-- <div class="highlights">
                    <h3>Career Highlights</h3>
