<section id="pricing" class="pricing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Performance Packages</h2>
            <p class="section-subtitle">Professional music for every occasion</p>
        </div>
        <div class="pricing-grid">
            {{#each pricing}}
            <div class="pricing-card {{#if @first}}featured{{/if}}">
                {{#if @first}}<div class="popular-badge">Most Popular</div>{{/if}}
                <h3 class="pricing-title">{{title}}</h3>
                <div class="pricing-price">{{price}}</div>
                <div class="pricing-duration">{{duration}}</div>
                <ul class="pricing-features">
                    {{#each features}}
                    <li class="pricing-feature">{{this}}</li>
                    {{/each}}
                </ul>
                <button class="btn btn-pricing">Book This Package</button>
            </div>
            {{/each}}
        </div>
    </div>
</section>

